<!doctype html>
<html>
<head>
<title>IDFP - Sources</title>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>
</head>

<body>
<table>
    <tr>
        {% for header in headers %}
            <th>{{header}}</th>
        {% endfor %}
    </tr>
    {% for row in rows %}
        <tr class="{{ loop.cycle('odd', 'even') }}"></tr>
            {% for i in row %}
                {% if loop.last %}
                    {% if i %}
                        <td><a href="/csv-errors/download?source_id={{row[0]}}">Download</a></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                {% else %}
                    <td>{{ i }}</td>
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
</table>
</body>
</html>
